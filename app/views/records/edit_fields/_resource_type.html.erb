<%# Copied from Hyrax to support dynamic labels and hints for custom worktypes %>

<% collection = if f.object.class == Oer
                  Hyrax::OerTypesService.select_all_options
                else
                  Hyrax::ResourceTypesService.select_options
                end %>

<%= f.input :resource_type,
    as: :select,
    collection: collection,
    label: label_for(term: :resource_type, record_class: f.object.class),
    hint: hint_for(term: :resource_type, record_class: f.object.class),
    input_html: { class: 'form-control', multiple: true } %>
